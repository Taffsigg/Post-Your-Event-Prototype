<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="spit.postyourevent">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        xmlns:tools="http://schemas.android.com/tools"
        tools:replace="allowBackup,supportsRtl">

        <activity android:name=".Activites.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activites.AddEvent"
            android:parentActivityName=".Activites.MainActivity"/>

        <activity android:name=".Activites.SetUserInfo"
            android:parentActivityName=".Activites.MainActivity"/>

        <activity android:name=".Login.Login"
            android:parentActivityName=".Activites.MainActivity"/>

        <activity android:name=".Activites.MyPostsActivity"
            android:parentActivityName=".Activites.MainActivity"/>

        <activity android:name=".Activites.EventDescription"
            android:parentActivityName=".Activites.MainActivity"/>

        <activity android:name=".Login.NewLogin"
            android:parentActivityName=".Activites.MainActivity"/>

        <activity android:name=".Activites.MyPostDescription"
            android:parentActivityName=".Activites.MyPostsActivity"/>

        <activity android:name=".Activites.AboutPage"
            android:parentActivityName=".Activites.MainActivity"/>

        <activity android:name=".Activites.FeedbackActivity"
            android:parentActivityName=".Activites.MainActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>