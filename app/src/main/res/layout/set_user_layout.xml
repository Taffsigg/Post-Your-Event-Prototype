<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <android.support.v7.widget.Toolbar
        android:id="@+id/nav_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/colorPrimary"
        android:elevation="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/setUser_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_alignLeft="@id/name"
                    android:layout_marginLeft="110dp"
                    android:backgroundTint="@color/colorPrimary"/>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/background"
                    android:layout_below="@id/name"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textSize="20dp"
                    android:layout_below="@id/line1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorPrimary"/>

                <Spinner
                    android:id="@+id/inputYear"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignLeft="@id/year"
                    android:layout_below="@+id/line1"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="110dp"
                    android:entries="@array/year_names">
                </Spinner>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/background"
                    android:layout_below="@id/year"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branch"
                    android:layout_below="@id/line2"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorPrimary"/>

                <Spinner
                    android:id="@+id/inputBranch"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignLeft="@id/branch"
                    android:layout_below="@+id/line2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="110dp"
                    android:textSize="20dp"
                    android:entries="@array/branch_names">
                </Spinner>

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/background"
                    android:layout_below="@id/branch"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/rollno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll No"
                    android:layout_below="@id/line3"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/setUser_rollno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_below="@id/line3"
                    android:layout_alignLeft="@id/name"
                    android:layout_marginLeft="110dp"
                    android:inputType="number"
                    android:backgroundTint="@color/colorPrimary"/>

                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/background"
                    android:layout_below="@id/rollno"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile No."
                    android:layout_below="@id/line4"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/setUser_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_below="@id/line4"
                    android:layout_alignLeft="@id/name"
                    android:layout_marginLeft="110dp"
                    android:inputType="number"
                    android:backgroundTint="@color/colorPrimary"/>

                <View
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/background"
                    android:layout_below="@id/mobile"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email ID"
                    android:layout_below="@id/line5"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/setUser_emailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_below="@id/line5"
                    android:layout_alignLeft="@id/name"
                    android:layout_marginLeft="110dp"
                    android:backgroundTint="@color/colorPrimary"/>

                <View
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/background"
                    android:layout_below="@id/email"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/setUser_saveButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Save Changes"
                    android:textColor="#fafafa"
                    android:background="@color/colorAccent"
                    android:layout_below="@+id/line6"
                    android:layout_toEndOf="@+id/mobile"
                    android:layout_marginTop="25dp" />


            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>